{% extends 'main.twig' %}

{% block body %}


        <div class="toast m-2 mt-5 w-25 sticky-top position-fixed" style="top: 0; right: 0; z-index: 9999">
            <div class="toast-header">
                <strong class="mr-auto">Уведомление</strong>
                <small></small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">
                    <span>&times;</span>
                </button>
            </div>
            <div class="toast-body">
                {{ notif }}
            </div>
        </div>

    <div class="col-md-5">
        <div class="row g-3">
                <div class="col-12 m-2">
                    <form class="changeToken" method="post" action="/settings">
                        <div class="input-group mb-3">
                            <div class="col-sm-12 col-form-label pl-0">Введите апи ключ от Linode: </div>
                            <input required type="text" class="form-control" name="LinodeToken" placeholder="Linode Api Key" aria-label="api key" value="{{ LinodeToken }}" aria-describedby="button-addon2">
                            <div class="input-group-append">
                                <input class="btn btn-outline-secondary" type="submit" id="button-addon2" value="Установить">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12 m-2">
                    <form class="changeToken" method="post" action="/settings">
                        <div class="input-group mb-3">
                            <div class="col-sm-12 col-form-label pl-0">Введите ip для A-записи Linode: </div>
                            <input required type="text" class="form-control" name="Anote_Linode" placeholder="Ip для Linode" aria-label="api key" value="{{ AnoteLinode }}" aria-describedby="button-addon2">
                            <div class="input-group-append">
                                <input class="btn btn-outline-secondary" type="submit" id="button-addon2" value="Установить">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12 m-2">
                    <form class="changeToken" method="post" action="/settings">
                        <div class="input-group mb-3">
                            <div class="col-sm-12 col-form-label pl-0">Введите апи ключ от DO: </div>
                            <input required type="text" class="form-control" name="DoToken" placeholder="OD Api Key" aria-label="api key" value="{{ DoToken }}" aria-describedby="button-addon2">
                            <div class="input-group-append">
                                <input class="btn btn-outline-secondary" type="submit" id="button-addon2" value="Установить">
                            </div>
                        </div>
                    </form>
                </div>
            <div class="col-12 m-2">
                <form class="changeToken" method="post" action="/settings">
                    <div class="input-group mb-3">
                        <div class="col-sm-12 col-form-label pl-0">Введите ip для A-записи Digital Ocean: </div>
                        <input required type="text" class="form-control" name="Anote_Do" placeholder="Ip для Digital Ocean" aria-label="api key" value="{{ AnoteDo }}" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <input class="btn btn-outline-secondary" type="submit" id="button-addon2" value="Установить">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}