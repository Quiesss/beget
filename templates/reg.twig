<body class="text-center flex-column">
{% if msg is not null %}
<div class="alert alert-dark w-100 position-absolute sticky-top" role="alert">
    <span>{{ msg }}</span>
</div>
{% endif %}

<main class="form-signin">
    <form action="/auth/create" method="post">
{#        <img class="mb-4" src="bootstrap-logo.svg" alt="" width="72" height="57">#}
        <h1 class="h3 mb-3">Регистрация</h1>

        <div class="form-floating">
            <input type="text" class="form-control"  name="login" id="name" placeholder="Логин" value="">

        </div>
        <div class="form-floating mt-2">
            <input type="password" class="form-control"  name="pass" id="pass" placeholder="Пароль">

        </div>
        <div class="form-floating mt-2">
            <input type="password" class="form-control"  name="pass2" id="pass2" placeholder="Повторите пароль">

        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Зарегестрироваться</button>
        <div class="mt-2">
        <a href="/auth/login">У меня есть аккаунт, войти</a>
        </div>
        <p class="mt-5 mb-3 text-muted">© 2021</p>
    </form>
</main>

